<Window x:Class="Wpf_DrozdovaDA_PR1.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_DrozdovaDA_PR1"
        mc:Ignorable="d"
        Title="УП1-Практическая работа 1" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,0" StartPoint="0.5,0"> 
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF0036FB" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Canvas>
            <Button x:Name="Win1" Canvas.Left="10" Canvas.Top="10" Height="50" Width="100" Content="Win1" Click="Win1_Click"></Button>
            <Button x:Name="Win2" Canvas.Left="150" Canvas.Top="10" Height="50" Width="100" Content="Win2" Click="Win2_Click"></Button> 
        </Canvas>
    </Grid>
</Window>
